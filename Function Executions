# Define collection names
v_nameCollection = 'Hash_YourName'
v_phoneCollection = 'Hash_YourLastFourDigits'

# Create collections
createCollection(v_nameCollection)
createCollection(v_phoneCollection)

# Get employee count in the name collection
print("Employee Count in Name Collection:", getEmpCount(v_nameCollection))

# Index data
indexData(v_nameCollection, 'Department')
indexData(v_phoneCollection, 'Gender')

# Delete an employee by ID
delEmpById(v_nameCollection, 'E02003')

# Get updated employee count
print("Updated Employee Count in Name Collection:", getEmpCount(v_nameCollection))

# Perform searches
print("Search by Department in Name Collection:", searchByColumn(v_nameCollection, 'Department', 'IT'))
print("Search by Gender in Name Collection:", searchByColumn(v_nameCollection, 'Gender', 'Male'))
print("Search by Department in Phone Collection:", searchByColumn(v_phoneCollection, 'Department', 'IT'))

# Get department facets
print("Department Facet in Name Collection:", getDepFacet(v_nameCollection))
print("Department Facet in Phone Collection:", getDepFacet(v_phoneCollection))
